{% extends '::admin_base.html.twig' %}

{% block stylesheets %}
<style>
* {
 padding:0;
  margin:0
}
dl {
 width:100%;
 overflow:hidden;
 background:#eee;
}
dt {
 float:left;
 width:30%; /* adjust the width; make sure the total of both is 100% */
