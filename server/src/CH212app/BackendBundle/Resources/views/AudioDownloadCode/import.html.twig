{% block javascripts %}
{% endblock %}

{% block body %}
<div class="container">
<h2>Requeriments</h2>
<dl>
<dt>Charset:</dt><dd>UTF-8</dd>
<dt>Separator:</dt><dd> ;</dd>
<dt>Enclosure:</dt><dd> "</dd>
<dt>Headers</dt><dd>No headers!</dd>
<dt>Format row:</dt><dd> "audio download code" ; </dd>
