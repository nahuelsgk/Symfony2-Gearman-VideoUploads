</dl>

<h2>Form</h2>
<form action="{{ path('_admin_downloadcode_import') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <input type="submit" />
</form>

{% if log|length > 0 %}
<h2>Raw log</h2>
<pre>
{{ dump(log) }}
</pre>
{% endif %}

{% endblock body %}
